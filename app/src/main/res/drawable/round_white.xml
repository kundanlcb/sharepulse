<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White fill color -->
    <solid android:color="#FFFFFF" />

    <!-- Grey stroke color and width -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Set padding to make sure the stroke is visible -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
