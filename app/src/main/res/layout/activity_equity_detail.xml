<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.securities.EquityDetail">
    <!-- Security Icon -->
    <ImageView
        android:id="@+id/securityIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_security_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/security_logo" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/securityIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Infosys] (INFY)"
            />

        <TextView
            android:id="@+id/textCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1600"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2.02%"
           />

    </LinearLayout>

    <!-- Chart Section Container -->
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- Add your chart view here, such as LineChart or CandlestickChart -->

    </FrameLayout>

    <!-- Fundamentals Section -->
    <!-- Fundamentals Section -->
    <LinearLayout
        android:id="@+id/fundamentalsSection"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/chartContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Row for Fundamentals -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textMarketCapKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market Cap:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textMarketCapValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$[Market Cap]"/>

            </LinearLayout>

            <!-- Second Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPERatioKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P/E:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPERatioValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[P/E Ratio]"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Second Row for Fundamentals -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Third Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPBRatioKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P/B Ratio:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPBRatioValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[P/B Ratio]"/>

            </LinearLayout>

            <!-- Fourth Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBookValueKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Value:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textBookValueValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$[Book Value]"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Third Row for Fundamentals -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Fifth Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textFaceValueKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face Value:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textFaceValueValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$[Face Value]"/>

            </LinearLayout>

            <!-- Sixth Fundamental Metric -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textIndustryPEKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face Value:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textIndustryPEValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$[Face Value]"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <!-- RecyclerView for Post Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fundamentalsSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.3"/>
</androidx.constraintlayout.widget.ConstraintLayout>